<div class="py-32 px-10 min-h-screen">
        <div>
            <% if @task.errors.any? %>
                <ul>
                    <% @task.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                    <% end %> 
                </ul>
            <% end %> 
        </div>
        
<div class="bg-gray-800 p-8 md:w-3/4 lg:w-1/2 mx-auto rounded-2xl shadow-2xl">
    <%= form_with scope: :task, model: [@category, @task], local:true do |f| %>

        <div class="flex items-center mb-5">
            <label for="name" class="inline-block w-20 mr-6 text-right font-bold text-white"><%= f.label :name %></label>

            <%= f.text_field :name, class: "flex-1 py-2 border-b-2 border-gray-400 focus:border-green-400 
                                            text-gray-600 placeholder-gray-400
                                            outline-none rounded-lg pl-4",placeholder: "Name" %>
        </div>
        <div class="flex items-center mb-5">
            <label for="description" class="inline-block w-20 mr-6 text-right font-bold text-white"><%= f.label :description %></label>
            <%= f.text_field :description, class: "flex-1 py-2 border-b-2 border-gray-400 focus:border-green-400 
                                            text-gray-600 placeholder-gray-400
                                            outline-none rounded-lg pl-4",placeholder: "Description" %>
        </div>

        <div class="flex items-center mb-5">
            <label for="twitter" class="inline-block w-20 mr-6 text-right font-bold text-white"><%= f.label :deadline %></label>
            <%= f.date_field :deadline, class: "flex-1 py-2 border-b-2 border-gray-400 focus:border-green-400 
                                            text-gray-600 placeholder-gray-400 outline-none rounded-lg pl-4"%>
        </div>
        <div class="text-right">
            <%= f.submit 'Create', class: "px-4 py-2 text-base font-medium leading-6 text-white whitespace-no-wrap bg-yellow-500 border border-transparent rounded-md shadow-sm hover:bg-transparent focus:outline-none focus:ring-2 focus:ring-offset-2" %>
        </div>
      
    <% end %>
</div>

</div>